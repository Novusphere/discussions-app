{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "target": "es2017",
        "isolatedModules": false,
        "noEmit": false,
        "baseUrl": "../",

        "jsx": "preserve",
        "allowJs": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "paths": {
            "@components": ["./components/index"],
            "@models/*": ["./models/*"],
            "@pages/": ["./pages/*"],
            "@d.ts/*": ["./types/*"],
            "@constants/*": ["./constants/*"],
            "@novuspherejs": ["./novusphere-js/index"],
            "@novuspherejs/*": ["./novusphere-js/*"],
            "@stores/*": ["./stores/*"],
            "@modules/*": ["./modules/*"],
            "@stores": ["./stores/index"],
            "@styles/*": ["./styles/*"],
            "@utils": ["./utils/index"],
            "@router": ["./routes.ts"],
            "@globals": ["./constants/globals.ts"]
        },
        "lib": ["dom", "es2015", "es2016"],
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots" : [
            "./node_modules/@types",
            "./interfaces/**/*.d.ts"
        ]
    },
    "exclude": ["dist", ".next", "out", "next.config.js"],
    "include": ["server/**/*.ts"]
}
